{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with MSVC",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars32.bat\" && cl /EHsc /O2 /DUNICODE /D_UNICODE src/main.cpp src/App.cpp /link comctl32.lib shell32.lib wininet.lib urlmon.lib shlwapi.lib gdi32.lib user32.lib kernel32.lib /SUBSYSTEM:WINDOWS /OUT:win-translator.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build with MSBuild",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe\" win-translator.vcxproj /p:Configuration=Release /p:Platform=Win32"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Application",
            "type": "shell",
            "command": "${workspaceFolder}\\win-translator.exe",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build with MSVC"
        }
    ]
}
